<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Select Your Programming language: "
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="413dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic_launcher_foreground"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="108dp"
        android:orientation="vertical">


        <CheckBox
            android:id="@+id/andriodCheckBox"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Andriod"
            android:textColor="@color/colorPrimaryblue"
            android:textStyle="italic|bold"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/javacheckBox"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Java"
            android:textColor="@color/colorPrimaryDarkpink"
            android:textStyle="italic|bold"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/phpcheckBox"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="PHP"
            android:textColor="@color/colorPrimaryDarkpurple"

            android:textStyle="italic|bold"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/pythoncheckBox"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Python"
            android:textColor="@color/colorPrimaryyellwo"
            android:textStyle="italic|bold"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/unity3dcheckBox"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="Unity 3D"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic|bold"
            android:textSize="18sp"/>


    </LinearLayout>

</RelativeLayout>